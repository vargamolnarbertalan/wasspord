<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header.ejs') %>
        <title>Dashboard | WassPord</title>
</head>

<body>

    <div class="container">
        <h1><span id="dashname"></span>
            <%=ejsdata.user.UserName%>'s dashboard</h1>
        <button id="logins" class="non-table btn small-btn" type="button">Logins</button>
        <button id="payments" class="non-table btn small-btn" type="button">Payments</button>
        <button id="logout" class="non-table btn small-btn" type="button">Log out</button>
    </div>
</body>

<script>
    $(document).ready(async function() {
        $('#logins').on("click", async function(e) {
            location.replace('/logins')
        })
        $('#payments').on("click", async function(e) {
            location.replace('/payments')
        })
        $('#logout').on("click", async function(e) {
            $.ajax({
                type: "GET",
                url: "/logout",
                success: function(data, status, xhr) {
                    //alert(`response status code: ${xhr.status} | response text: ${xhr.responseText}`)
                    location.href = "/login"
                },
                error: function(xhr, status, error) {
                    alert(`Error: ${xhr.responseText}`)
                    console.log(`response status code: ${xhr.status} | response text: ${xhr.responseText}`)
                }
            })
        })
    })
</script>

</html>